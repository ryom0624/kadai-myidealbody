
<%= form_for goal do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <div class="form-group">
    <%= f.label :date, "期日"%>
    <%= f.date_field :date, class:"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :weight, "体重(kg)"%>
    <%= f.number_field :weight, class:"form-control",step:0.05 %>
  </div>
  <div class="form-group">
    <%= f.label :fat, "体脂肪率(%)"%>
    <%= f.number_field :fat, class:"form-control",step:0.1 %>
  </div>
  <div class="form-group">
    <%=f.label :image,"目標にしたい画像をアップロード" %>
    <%= f.file_field :image ,class:"form-contorl"%>
  </div>

  <div class="text-center">
    <%= f.submit "保存", class:"btn btn-info btn-lg" %>
  </div>
<% end %>



