<%= form_tag(compare_path, method: :get) do %>
  <div class="row">
    <div class="col-md-offset-1 col-md-10 text-center">
      <div class="card">
        <div class="card-content">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag :compare1, "ログデータ１"%>
                <%= date_field_tag :compare1, class:"form-control" %>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <%= label_tag :compare1, "ログデータ２"%>
                <%= date_field_tag :compare2, class:"form-control" %>
              </div>
            </div>
            <div class="form-group text-center">
              <label>
                <%= check_box_tag :goal,"yes","no" %><span>目標と比較する</span>
              </label>
            </div>
            <div>
              <%= submit_tag "比較する" , class:"btn waves-effect waves-light" %>
            </div>
          </div>
        </div>
      </div>
    </div>    
  </div>
<% end %>