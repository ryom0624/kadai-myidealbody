<div class="row">
  <div class="col s12 m12 center-align">
    <div class="card horizontal animated bounceInUp hoverable">
      <div class="card-image">
        <%= image_tag content.image %>
      </div>
      <div class="card-stacked" >
        <div class="card-content table-responsive">
          <table class="centered">
            <thead>
              <tr>
                <th>期日</th>
                <th>体重</th>
                <th>体脂肪率</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= content.date.strftime("%Y/%m/%d") %></td>
                <td><%= content.weight %>kg</td>
                <td><%= content.fat %>%</td>
              </tr>
            </tbody>
          </table>          
        </div>
        <div class="card-action center-align">
          <%= link_to path,remote: true do %><i class="material-icons modal-trigger" data-target="modal">edit<span>編集</span></i><% end %>
          <%= link_to log_path(content), method: :delete, class: display, data: {confirm: "削除してもよろしいですか?"} do %><i class="material-icons">clear<span>削除</span></i><% end %>
        </div>
      </div>
    </div>
  </div>
</div>