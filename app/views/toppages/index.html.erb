<% if logged_in? %>

<%= current_user.id %>
<%= current_user.name %>


<ul>
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <div class="panel panel-default">
          <div class="panel panel-heading">目標</div>
          <div class="panel panel-body">
            <li>date:<%= @goal.date.strftime("%Y/%m/%d") %>　　weight:<%= @goal.weight %>kg　　fat:<%= @goal.fat %>%  
            <%= link_to "編集", edit_goal_path(current_user.goal) %>
          </div>
        </div>        
      </div>
    </div>
</ul>

<ul>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="panel panel-default">
        <div class="panel panel-heading">ログ</div>
        <div class="panel panel-body">
          <% @logs.each do |log| %>
            <li>date:<%= log.date.strftime("%Y/%m/%d") %>　　weight:<%= log.weight %>kg　　fat:<%= log.fat %>%  
            <%= link_to "編集", edit_log_path(log) %>
            <%= link_to "削除", log_path(log), method: :delete, data: {confirm: "削除してもよろしいですか?"} %></li>
          <% end %>
        </div>
      </div>        
    </div>
  </div>
  <%= paginate @logs %>
</ul>




<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>My Ideal Body</h1>
      <h3>あなたの理想のカラダへ</h3>
      <%= link_to "新規登録", signup_path, class:"btn btn-info btn-lg" %>
    </div>
  </div>
<% end %>

