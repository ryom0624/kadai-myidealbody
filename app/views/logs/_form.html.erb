
<%= form_for log do |f| %>
  <%= render "layouts/error_messages", model: f.object %>
  <div class="form-group">
    <%= f.label :date, "日付"%>
    <div class="input-field">
      <%= f.date_field :date %>
    </div> 
  </div>
  <div class="form-group">
    <%= f.number_field :weight ,step:0.05, placeholder:"体重(kg)" %>
  </div>
  <div class="form-group">
    <%= f.number_field :fat ,step:0.1, placeholder:"体脂肪率(%)" %>
  </div>
  
  <div class="form-group">
    <%= f.label :date, "画像"%>
    <div class="input-field">
        <%= f.file_field :image ,class:"file-path validate"%>
    </div>
    <div class="center-align">
      <%= image_tag log.image.url if log.image?%>
      <%= f.hidden_field :image_cache %>
    </div>
    <div class="center-align">
      <%= f.submit "保存", class:"btn btn-success" %>
    </div>
  </div>

<% end %>



