<div class="row">
  <div class="col m10 offset-m1 s12">
    <h3>ユーザ編集</h3>
    <%= form_for user do |f| %>
      <%= render "layouts/error_messages", model: f.object %>
      <div class="form-group">
        <%= f.text_field :name, placeholder:"お名前" %>
      </div>
      <div class="form-group">
        <%= f.text_field :email, placeholder:"メールアドレス" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder:"パスワード" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder:"確認" %>
      </div>
      <div class="text-center">
        <%= f.submit "保存", class:"btn btn-info btn-lg" %>
      </div>
    <% end %>
  </div>
</div>


